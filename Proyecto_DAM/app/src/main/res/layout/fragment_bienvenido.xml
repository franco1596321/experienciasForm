<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BienvenidoFragment">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/imgbarsinedit" />

    <!-- Capa semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000" />

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Quiénes somos"
                android:textSize="28sp"
                android:textStyle="italic"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Somos más que una barbería, somos un espacio donde el estilo y el cuidado personal se fusionan con la tradición y la modernidad. En Male Impact, nos especializamos en cortes de cabello que se adaptan a cada estilo y personalidad, brindando un servicio de excelencia y dedicación."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxWidth="600dp"
                android:padding="16dp"
                android:background="#66000000"
                android:layout_marginBottom="24dp" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo de la empresa"
                android:scaleType="centerInside"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tv_explore_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Sé parte de nuestra comunidad y experimenta cómo redefinimos el estilo y el cuidado personal juntos. Descubre lo que podemos crear para ti!"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:maxWidth="600dp"
                android:layout_marginBottom="24dp" />



            <!-- Botón de cerrar sesión -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/dark_grey" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
