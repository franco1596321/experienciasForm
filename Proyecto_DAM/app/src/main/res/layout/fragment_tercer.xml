<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbarber"
    tools:context=".TercerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linearContenedorPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1A1A1A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgBarberia1"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_baberia_joseph"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nomBarber1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1E8179"
                            android:fontFamily="casual"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/desc1"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnVerMasBarber1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Ver más"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:backgroundTint="#0A87B6"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1A1A1A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgBarberia2"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_barberia_molano"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nomBarber2"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1E8179"
                            android:fontFamily="casual"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/desc2"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnVerMasBarber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Ver más"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:backgroundTint="#0A87B6"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1A1A1A">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgBarberia3"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_barberia_ruzafa"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nomBarber3"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1E8179"
                            android:fontFamily="casual"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/desc3"
                            android:textSize="14sp"
                            android:textColor="#E0E0E0"
                            android:fontFamily="sans-serif-light"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp" />

                        <Button
                            android:id="@+id/btnVerMasBarber3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Ver más"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:backgroundTint="#0A87B6"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
